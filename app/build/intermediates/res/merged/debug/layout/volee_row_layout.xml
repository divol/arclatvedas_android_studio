<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

     <TextView
         android:id="@+id/vol"
         android:layout_width="20dp"
         android:layout_height="wrap_content"
         android:text="10"
         android:textAppearance="?android:attr/textAppearanceMedium"
          />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/vol"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/vol"
        
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv1"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv2"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv3"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv4"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv5"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv5"
        android:text="10"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/total"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv6"
        android:layout_alignParentRight="true"
        android:text="60"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="visible" />

</RelativeLayout>