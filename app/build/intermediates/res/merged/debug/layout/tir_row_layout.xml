<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kkkk"
        android:textAppearance="?android:attr/textAppearanceLarge" />
		
   
    <CheckBox
        android:id="@+id/checkBoxSelected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignBaseline="@+id/textViewName"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/textViewName"
        android:text="ttttt" />
    
    
    <TextView
        android:id="@+id/textTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="712"
        android:layout_alignBaseline="@+id/textViewName"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@+id/textViewDate"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/blasonButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        
        android:layout_alignTop="@+id/textViewDate"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/checkBoxSelected"
        android:text="@string/title_activity_Circle" />

</RelativeLayout>